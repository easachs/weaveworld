<div class="flex flex-col gap-8">
  <div class="flex justify-between items-center">
    <%= link_to root_path, class: "text-gray-400 hover:text-white" do %>
      ‚Üê Back to Stories
    <% end %>
  </div>

  <div class="space-y-6">
    <div class="p-6 bg-gray-900 rounded-lg">
      <h1 class="text-3xl mb-4"><%= @mission.name %></h1>
      <p class="text-gray-400 mb-4"><%= @mission.description %></p>
      <span class="inline-block px-3 py-1 bg-gray-800 rounded-full text-sm">
        <%= @mission.status %>
      </span>
    </div>

    <% if @mission.events.any? %>
      <div class="space-y-4">
        <h2 class="text-2xl">Events</h2>
        <div class="grid gap-4">
          <% @mission.events.order(created_at: :desc).each do |event| %>
            <div class="p-4 bg-gray-900 rounded-lg">
              <p class="text-gray-400 mb-2"><%= event.description %></p>
              <span class="inline-block px-2 py-1 text-sm bg-gray-800 rounded">
                <%= event.category %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
